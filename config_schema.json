{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The Root Schema",
    "description": "The root schema comprises the entire JSON document.",
    "required": [
        "credentials",
        "alerts"
    ],
    "properties": {
        "credentials": {
            "$id": "#/properties/credentials",
            "type": "object",
            "title": "The Credentials Schema",
            "description": "An explanation about the purpose of this instance.",
            "default": {},
            "examples": [
                {
                    "chat_id": -12345.0,
                    "bot_key": "ASMKJDNAKJDNKSAJNKDJsa"
                }
            ],
            "required": [
                "chat_id",
                "bot_key"
            ],
            "properties": {
                "chat_id": {
                    "$id": "#/properties/credentials/properties/chat_id",
                    "type": ["integer", "string"],
                    "title": "The Telegram chat_id Schema",
                    "description": "Telegram chat ID for messages to be sent to. ",
                    "examples": [
                        -12345
                    ]
                },
                "bot_key": {
                    "$id": "#/properties/credentials/properties/bot_key",
                    "type": "string",
                    "title": "The Bot_key Schema",
                    "description": "API key for telegram. ",
                    "default": "",
                    "examples": [
                        "ASMKJDNAKJDNKSAJNKDJsa"
                    ]
                }
            }
        },
        "alerts": {
            "$id": "#/properties/alerts",
            "type": "object",
            "title": "The Alerts Schema",
            "description": "An explanation about the purpose of this instance.",
            "default": {},
            "examples": [
                {
                    "crypto_code": "BTC",
                    "price_type": "spot",
                    "price_alerts": [
                        2000.0,
                        3000.0,
                        4000.0,
                        5000.0
                    ],
                    "currency_code": "EUR",
                    "price_file": "./data/last_price.json",
                    "price_increments": [
                        50.0,
                        100.0,
                        200.0
                    ],
                    "check": 60.0
                }
            ],
            "required": [
                "price_file",
                "check",
                "price_type",
                "currency_code",
                "crypto_code"
            ],
            "properties": {
                "price_file": {
                    "$id": "#/properties/alerts/properties/price_file",
                    "type": "string",
                    "title": "The Price_file Schema",
                    "description": "The bot will store the last price it received to this file, for restarting.",
                    "default": "",
                    "examples": [
                        "./data/last_price.json"
                    ]
                },
                "check": {
                    "$id": "#/properties/alerts/properties/check",
                    "type": "integer",
                    "title": "The Check Schema",
                    "description": "Amount of time in seconds to query coinbase for prices. ",
                    "default": 0,
                    "examples": [
                        60
                    ]
                },
                "price_type": {
                    "$id": "#/properties/alerts/properties/price_type",
                    "type": "string",
                    "title": "The Price_type Schema",
                    "description": "Type of price to get [buy, sell, spot]",
                    "default": "",
                    "examples": [
                        "spot"
                    ]
                },
                "currency_code": {
                    "$id": "#/properties/alerts/properties/currency_code",
                    "type": "string",
                    "title": "The Currency_code Schema",
                    "description": "Currency to convert crypto currency code ",
                    "default": "",
                    "examples": [
                        "EUR"
                    ]
                },
                "crypto_code": {
                    "$id": "#/properties/alerts/properties/crypto_code",
                    "type": "string",
                    "title": "The Crypto_code Schema",
                    "description": "Crypto currency to check. ",
                    "default": "",
                    "examples": [
                        "BTC"
                    ]
                },
                "price_alerts": {
                    "$id": "#/properties/alerts/properties/price_alerts",
                    "type": "array",
                    "title": "The Price_alerts Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": [],
                    "items": {
                        "$id": "#/properties/alerts/properties/price_alerts/items",
                        "type": "integer",
                        "title": "The Items Schema",
                        "description": "An explanation about the purpose of this instance.",
                        "default": 0,
                        "examples": [
                            2000,
                            3000,
                            4000,
                            5000
                        ]
                    }
                },
                "price_increments": {
                    "$id": "#/properties/alerts/properties/price_increments",
                    "type": "array",
                    "title": "The Price_increments Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": [],
                    "items": {
                        "$id": "#/properties/alerts/properties/price_increments/items",
                        "type": "integer",
                        "title": "The Items Schema",
                        "description": "An explanation about the purpose of this instance.",
                        "default": 0,
                        "examples": [
                            50,
                            100,
                            200
                        ]
                    }
                }
            }
        }
    }
}